<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:gravity="right"/>

        <EditText android:id="@+id/dialog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:maxLength="10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Gender : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:gravity="right"/>

        <RadioGroup android:id="@+id/dialog_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="18sp"
                android:textStyle="bold"
                android:checked="true"/>
            <RadioButton android:id="@+id/Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nation : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:gravity="right"/>

        <Spinner android:id="@+id/dialog_nation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/nation"
            android:scrollbarSize="22dp">
        </Spinner>
    </LinearLayout>

    <Button android:id="@+id/dialog_add_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Member"
        android:textAllCaps="false"
        android:textColor="#000000"/>

    <Button android:id="@+id/dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#000000"/>


</LinearLayout>