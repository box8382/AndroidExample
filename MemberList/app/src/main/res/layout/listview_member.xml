<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999999"
    android:padding="16dp">

    <TextView android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Name"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView android:id="@+id/member_nation"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="nation"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:gravity="bottom"
        android:layout_toRightOf="@id/member_name"/>

    <ImageView android:id="@+id/member_img_nation"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/flag_korea"/>

    <ImageView android:id="@+id/member_img_gender"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/hippo"
        android:layout_below="@id/member_img_nation"/>

    <TextView android:id="@+id/member_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clock"
        android:textSize="15sp"
        android:layout_below="@id/member_img_gender"
        android:gravity="right"/>


</RelativeLayout>